<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/edittext_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color inside the border -->
    <solid android:color="#FFFFFF" />  <!-- White background -->

    <!-- Border around the EditText -->
    <stroke
        android:width="2dp"
        android:color="#CCCC" />  <!-- Light gray border -->

    <!-- Rounded corners -->
    <corners android:radius="10dp" />

    <!-- Optional padding inside the border -->
    <padding android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp"/>
</shape>
